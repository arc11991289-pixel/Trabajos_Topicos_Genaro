    /**
     * Muestra la configuración seleccionada por el usuario en un JOptionPane.
     * @param evt El evento de acción del botón.
     */
    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnGuardarActionPerformed
        // 1. Obtener el Sistema Operativo seleccionado
        String os = "";
        if (rbWin.isSelected()) {
            os = rbWin.getText();
        } else if (rbLnx.isSelected()) {
            os = rbLnx.getText();
        } else if (rbMac.isSelected()) {
            os = rbMac.getText();
        }

        // 2. Obtener las especialidades seleccionadas
        StringBuilder especialidades = new StringBuilder();
        if (ckPrg.isSelected()) {
            especialidades.append(ckPrg.getText()).append(", ");
        }
        if (ckGrf.isSelected()) {
            especialidades.append(ckGrf.getText()).append(", ");
        }
        if (ckAdm.isSelected()) {
            especialidades.append(ckAdm.getText()).append(", ");
        }
        
        String especialidadFinal = especialidades.length() > 0 
                ? especialidades.substring(0, especialidades.length() - 2) // Eliminar la última coma y espacio
                : "Ninguna";

        // 3. Obtener las horas del JSlider
        int horas = slHoras.getValue();

        // 4. Mostrar el resumen
        String mensaje = String.format(
                "Preferencias guardadas:\n\n"
                + "Sistema Operativo: %s\n"
                + "Especialidad(es): %s\n"
                + "Horas de trabajo: %d horas/día",
                os, especialidadFinal, horas
        );
        
        JOptionPane.showMessageDialog(this, mensaje, "Resumen de Preferencias", JOptionPane.INFORMATION_MESSAGE);
    }//GEN-LAST:event_btnGuardarActionPerformed


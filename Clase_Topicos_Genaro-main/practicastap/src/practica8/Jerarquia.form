    /**
     * Crea un modelo de árbol con nodos de ejemplo para jTree1.
     */
    private void configurarJTree() {
        // 1. Crear el nodo raíz (Root Node)
        DefaultMutableTreeNode root = new DefaultMutableTreeNode("Carpetas de Proyecto");
        
        // 2. Crear los nodos de primer nivel
        DefaultMutableTreeNode src = new DefaultMutableTreeNode("src");
        DefaultMutableTreeNode resources = new DefaultMutableTreeNode("resources");
        DefaultMutableTreeNode lib = new DefaultMutableTreeNode("lib");
        
        // 3. Crear nodos de segundo nivel (subcarpetas o archivos)
        DefaultMutableTreeNode mainJava = new DefaultMutableTreeNode("main/java");
        DefaultMutableTreeNode mainRes = new DefaultMutableTreeNode("main/resources");
        DefaultMutableTreeNode log4j = new DefaultMutableTreeNode("log4j.jar");
        
        // 4. Crear nodos hoja
        DefaultMutableTreeNode encuestaTbl = new DefaultMutableTreeNode("EncuestaTbl.java");
        DefaultMutableTreeNode visorArbol = new DefaultMutableTreeNode("VisorArbol.java");
        
        // 5. Ensamblar la jerarquía
        root.add(src);
        root.add(resources);
        root.add(lib);
        
        src.add(mainJava);
        src.add(mainRes);
        
        mainJava.add(encuestaTbl);
        mainJava.add(visorArbol);
        
        lib.add(log4j);
        
        // 6. Asignar el nuevo modelo al JTree
        jTree1.setModel(new DefaultTreeModel(root));
    }


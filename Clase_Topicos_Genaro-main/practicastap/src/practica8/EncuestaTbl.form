    /**
     * Intenta establecer la conexión con la base de datos.
     */
    private void conectarBaseDeDatos() {
        try {
            this.conexion = DriverManager.getConnection(URL, USER, PASSWORD);
            REGISTRO.log(Level.INFO, "Conexión a MySQL establecida para el visor.");
        } catch (SQLException e) {
            JOptionPane.showMessageDialog(this,
                    "Error al conectar con la BD: " + e.getMessage() + 
                    "\nLa tabla no podrá ser cargada.",
                    "Error de Conexión",
                    JOptionPane.ERROR_MESSAGE);
            REGISTRO.log(Level.SEVERE, "Error al conectar a MySQL", e);
            this.conexion = null;
        }
    }

    /**
     * Carga todos los registros de la tabla 'respuestas' en el JTable.
     */
    private void cargarDatosTabla() {
        if (this.conexion == null) {
            // Si la conexión falló previamente, se detiene
            return; 
        }

        // Obtener el modelo de la tabla para manipular sus filas
        DefaultTableModel model = (DefaultTableModel) tblResp.getModel();
        model.setRowCount(0); // Limpia las filas existentes

        String query = "SELECT idRespuesta, sSisOper, cProgra, cDiseno, cAdmon, iHoras FROM respuestas ORDER BY idRespuesta DESC";

        try (Statement stmt = this.conexion.createStatement();
             ResultSet rs = stmt.executeQuery(query)) 
        {
            // Itera sobre los resultados
            while (rs.next()) {
                // Añade una nueva fila al modelo con los datos del ResultSet
                model.addRow(new Object[]{
                    rs.getInt("idRespuesta"),
                    rs.getString("sSisOper"),
                    rs.getString("cProgra"),
                    rs.getString("cDiseno"),
                    rs.getString("cAdmon"),
                    rs.getInt("iHoras")
                });
            }
        } catch (SQLException ex) {
            REGISTRO.log(Level.SEVERE, "Error al consultar la tabla de respuestas", ex);
            JOptionPane.showMessageDialog(this,
                    "Error al cargar datos: " + ex.getMessage(),
                    "Error de Consulta",
                    JOptionPane.ERROR_MESSAGE);
        }
    }

